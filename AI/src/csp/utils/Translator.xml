<instance format="XCSP3" type="CSP">
    <variables>
        <array id="x" note="x[i] is the cell i" size="[9]"> 1..9 </array>
    </variables>
    <constraints>
        <allDifferent> x[] </allDifferent>
        <sum>
            <list> x[0] x[3] x[6] </list>
            <condition> (eq,15) </condition>
        </sum>
        <sum>
            <list> x[1] x[4] x[7] </list>
            <condition> (eq,15) </condition>
        </sum>
        <sum>
            <list> x[2] x[5] x[8] </list>
            <condition> (eq,15) </condition>
        </sum>
        <sum>
            <list> x[0..2] </list>
            <condition> (eq,15) </condition>
        </sum>
        <sum>
            <list> x[3..5] </list>
            <condition> (eq,15) </condition>
        </sum>
        <sum>
            <list> x[6..8] </list>
            <condition> (eq,15) </condition>
        </sum>
        <sum>
            <list> x[0] x[4] x[8] </list>
            <condition> (eq,15) </condition>
        </sum>
        <sum>
            <list> x[2] x[4] x[6] </list>
            <condition> (eq,15) </condition>
        </sum>
    </constraints>
</instance>
